<script type="text/javascript" src="http://js.sohu.com/library/jquery-1.7.1.min.js"></script>
<script type="text/javascript" src="http://tv.sohu.com/upload/swf/showVrsPlayer.js"></script>
<script type="text/javascript" src="http://news.sohu.com/upload/lianghui2017281/js/base.js"></script>
<script type="text/javascript">
var jq = jQuery;

jQuery(function(jq){
	function changeTab(lis, divs, nums){
		lis.each(function(i){
			var els = jq(this);
			els.mouseover(function(){
				lis.removeClass("now");
				divs.stop().hide();
				jq(this).addClass("now");
				divs.eq(i).show();
			});
		}).eq(nums).mouseover();
	};
	function changeTab1(lis, divs, nums){
		lis.each(function(i){
			var els = jq(this);
			els.click(function(){
				lis.removeClass("now");
				divs.stop().hide();
				jq(this).addClass("now");
				divs.eq(i).show();
			});
		}).eq(nums).click();
	};
	var divA = jq("#turnIDA");//焦点区
	changeTab1(divA.find(".menuA li"), divA.find(".turn"), 0);
	
	var divB = jq("#turnIDB");//发布会
	changeTab(divB.find(".menuB li"), divB.find(".turn"), 0);

        var divC = jq("#turnIDC");//头条区
	changeTab(divC.find(".menuC li"), divC.find(".turn"), 0);
	
	var divD = jq("#turnIDD");//政府报告
	changeTab(divD.find(".menuD li"), divD.find(".turn"), 0);
var divZ = jq("#turnIDZ");//发布会
	changeTab(divZ.find(".menuB li"), divZ.find(".turn"), 0);

var divS = jq("#turnIDS");//总书记
	changeTab(divS.find(".menuS li"), divS.find(".turn"), 0);


});
</script>



<script>

var frag10index=0;
var frag11index=0;
var frag12index=0;
$(function(){

    //两会常识
    $("#slide10 li").on("mouseover",function(){
        var id =$(this).index();
        frag10index=id;
        $(this).addClass("cur").siblings().removeClass();
        $(".cont_box").eq(id).show().siblings().hide();
        //console.log(frag10index);
    })
    $(".slide10 .btn_left").on("click",function(){
        var id;
        frag10index ? id=frag10index-1 : id=$("#slide10 li").length-1;
        $("#slide10 li").eq(id).addClass("cur").siblings().removeClass();
        $(".cont_box").eq(id).show().siblings().hide();
        frag10index=id;
    })
    $(".slide10 .btn_right").on("click",function(){
        var id;
        (frag10index!=$("#slide10 li").length-1) ? id=frag10index+1 : id=0;
        $("#slide10 li").eq(id).addClass("cur").siblings().removeClass();
        $(".cont_box").eq(id).show().siblings().hide();
        frag10index=id;
    })
	
	//两会常识1
   // $("#slide11 li").on("mouseover",function(){
   //     var id =$(this).index();
   //     frag11index=id;
       // $(this).addClass("cur").siblings().removeClass();
   //     $(".cont_box1").eq(id).show().siblings().hide();
        //console.log(frag10index);
  //  })
    $(".slide11 .btn_left1").on("click",function(){
        var id;
        frag11index ? id=frag11index-1 : id=$("#slide11 li").length-1;
       // $("#slide11 li").eq(id).addClass("cur").siblings().removeClass();
        $(".cont_box1").eq(id).show().siblings().hide();
        frag11index=id;
    })
    $(".slide11 .btn_right1").on("click",function(){
        var id;
        (frag11index!=$("#slide11 li").length-1) ? id=frag11index+1 : id=0;
       // $("#slide11 li").eq(id).addClass("cur").siblings().removeClass();
        $(".cont_box1").eq(id).show().siblings().hide();
        frag11index=id;
    })


