<script type="text/javascript">
  Qfast(true,'widgets',function(){
    //返回顶部
    K.scrollTop=function(){
      var scrollTop=0;
      var clientHeight = window.innerHeight||document.documentElement.clientHeight||document.body.clientHeight;
      K("scrollTop").bind("click",function(){window.scrollTo(0,0)});
      window.onscroll=function(){
        scrollTop=document.documentElement.scrollTop||document.body.scrollTop;
        if(scrollTop < 1200){
  $(".main-add-content-imgwrapper img").css({position:"static"});
        }else{
  $(".main-add-content-imgwrapper img").css({position:"fixed",bottom:"254px",right:"270px","z-index":"100"});
        }

        if(scrollTop<200){
          K("scrollTop").css({display:"none"});
        }else{
          K("scrollTop").css({display:"block"});
        }

      };
      if(K.B.ie6){
        K("scrollTop").css("position:absolute;");
        K("imglist").css("position:absolute;");
        
        window.onscroll = function (){
          scrollTop=document.documentElement.scrollTop||document.body.scrollTop;
          if(scrollTop < 1200){
  $(".main-add-content-imgwrapper img").css({position:"static"});
          }else{
  $(".main-add-content-imgwrapper img").css({position:"fixed",bottom:"254px",right:"270px","z-index":"100"});
          }
          
          if(scrollTop<200){
            K("scrollTop").css({display:"none"});
          }else{
            K("scrollTop").css({display:"block"});
          }
          
          K("scrollTop").node.className=K("scrollTop").node.className; //ie6 scroll bug
        }
      }
    };
    //返回顶部
    K.scrollTop();
  });
</script>
<!-- 回到顶部 结束 -->


