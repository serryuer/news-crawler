<script type="text/javascript">
  var plId = ;// 评论ID
  $.getScript("http://coral.qq.com/article/" + plId + "/comment?source=10&commentid=0&reqnum=10&callback=getComment");
  window["getComment"] = function (result) {
      if (result.errCode == 0) {
          var com = $("#commcount");
          com.html(result.data.total);
          try {
              if (/Android|webOS|iPhone|iPod|BlackBerry|iPad|SymbianOS/i.test(navigator.userAgent)) {
                  com.attr("href", 'http://xw.qq.com/c/comments/' + plId + '/news' + plId)
              } else {
                  com.attr("target", "_blank");
                  com.attr("href", 'http://coral.qq.com/' + plId)
              }
          } catch (e) {
          };
      }
  };
</script>
  
<script type="text/javascript">
  //分享
  $(function(){
        $('#ui-shareBox dd').click(function(){
        var t = document.title;
              var url = encodeURIComponent(document.location);
              var p = encodeURI($('.article img').eq(0).attr('src'));
              var d = $('.fenxiang p').eq(0).text() || '';
              var shareType = $(this).attr('class');
              switch(shareType){
                  case "tcwb":
                      iShare.jiathis('tqq',t,url,p);
                  break;
                  case "qzone":
                      iShare.jiathis('qzone',t,url,p);
                  break;
                  case "pengyou":
                      iShare.QQ(t,url,p,d);
                  break;
                  case "sina":
                      iShare.shareSina(t,url,p);
                  break;
                  case "phone":
                      return;
                  break;
              }
        });

      window.samuelchengshare = function(data) {
            if (data.code) {
                $("#imgewm").html("<img src='" + data.url + "'><p>微信扫描分享话题</p>");
            } else {
                $("#imgewm,#phone").hide();
            }
        }
        if (mobileUrl && mobileUrl != "null" && mobileUrl != "NULL") {
            $.getScript('http://news.open.qq.com/qrcode/gen.php?url=' + mobileUrl + '&callback=window.samuelchengshare');
        } else {
            $("#imgewm,#phone").hide();
        }
    });
</script>

